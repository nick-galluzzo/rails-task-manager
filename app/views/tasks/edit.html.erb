<div class="top-container">
  <div class="header">
    <h1>Edit - <%= @task.title %></h1>
  </div>
  <div class="button">
    <%= link_to 'Return', task_path, class: 'btn btn-primary button button-width return-button' %>
  </div>
</div>
<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.check_box :completed %>
  <%= f.label :completed %>
</div>
<div class="edit-footer">
  <div class="edit-submit">
    <%= f.submit %>
  <% end %>



