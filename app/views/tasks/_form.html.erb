<%= form_for(@task) do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
</div>
<!-- add completed checkbox to edit page only -->
<% if @task.persisted? %>
<div class="form-group">
  <%= f.check_box :completed %>
  <%= f.label :completed %>
</div>
<% end %>
<div class="edit-footer">
  <div class="edit-submit">
    <%= f.submit %>
  <% end %>
